#!/usr/bin/env zsh

export STOW_FOLDERS="bin,nvim,tmux,uwuntu,netflix,personal,i3,zsh,xkb"

increaseWatchers() {
    sudo sysctl fs.inotify.max_user_watches=65536
    sudo sysctl -p
}

change_background() {
    echo "Not integrated"
#    dconf write /org/mate/desktop/background/picture-filename "'$HOME/personal/wallpapers/$(ls ~/personal/wallpapers | fzf)'"
}

die() {
    echo >&2 "$@"
    exit 1
}

addToPath() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$PATH:$1
    fi
}

addToPathFront() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$1:$PATH
    fi
}

commitDotFiles() {
    pushd $DOTFILES
    pushd personal
    git add .
    git commit -m "auto: Some changes in environment"
    git push origin master
    popd
    git add .
    git commit -m "auto: Some changes in environment"
    git push origin master
    popd
}
